{
  // Markdownlint configuration for Claude configuration repository
  // We disable several rules that conflict with our documentation style
  "config": {
    "default": true,
    // MD009: Trailing spaces (sometimes needed for formatting)
    "MD009": false,
    // MD013: Line length (our commands have long descriptions)
    "MD013": false,
    // MD022: Headings should be surrounded by blank lines
    "MD022": false,
    // MD023: Headings must start at beginning of line
    "MD023": false,
    // MD026: Trailing punctuation in heading (we use colons)
    "MD026": false,
    // MD031: Fenced code blocks should be surrounded by blank lines
    "MD031": false,
    // MD032: Lists should be surrounded by blank lines
    "MD032": false,
    // MD033: Inline HTML (needed for some formatting)
    "MD033": false,
    // MD040: Fenced code blocks should have language specified
    "MD040": false,
    // MD041: First line in file should be a top level heading
    "MD041": false,
    // MD047: Files should end with single newline
    "MD047": false,
    // MD046: Code block style (conflicts with complex documentation)
    "MD046": false,
    // MD050: Strong style should be consistent (we use both ** and __)
    "MD050": false,
    // MD051: Link fragments should be valid (emoji in headings cause issues)
    "MD051": false,
    // MD025: Multiple top level headings (false positives with Python comments in code blocks)
    "MD025": false,
    // MD001: Heading levels should only increment by one level at a time
    "MD001": false,
    // MD036: Emphasis used instead of a heading (false positives with legitimate emphasis)
    "MD036": false
  },
  // Ignore patterns
  "ignores": [
    "node_modules",
    ".git",
    ".tmp",
    "**/.tmp"
  ]
}
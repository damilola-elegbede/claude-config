# NPM Configuration for CI/CD Reliability
# Configured to handle rate limiting and network issues

# Registry settings
registry=https://registry.npmjs.org/

# Retry configuration for 429 errors
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
fetch-retry-factor=2
fetch-retries=5

# Timeout settings
timeout=300000
fetch-timeout=300000

# Performance and reliability settings
prefer-offline=true
audit=false
progress=false
fund=false

# Cache settings
cache-min=86400

# Security settings
package-lock=true
save-exact=true